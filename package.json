{
  "name": "sqlite-viewer",
  "description": "This app is to view sqlite database file data and execute sqlite queries.",
  "author": {
    "name": "Harmeet Singh",
    "email": "harmeet@builduptech.in"
  },
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "lucide-react": "^0.469.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.sqlite-viewer.app",
    "productName": "Sqlite Viewer",
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/sqlite.icns",
      "category": "public.app-category.utilities",
      "extraResources": [
        {
          "from": "public/",
          "to": "public/",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "public/sqlite.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 350,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "directories": {
      "output": "release"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}